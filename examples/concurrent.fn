is_zero = fn (0 FunTrue otherwise _) {
    FunTrue()
} (_ _ otherwise FunFalse) {
    FunFalse()
}

public say = fn (Pid Str) {
   io.fwrite("~s~n" [Str])
   Pid ! done
}

wait = fn (N) {
    receive (done) {
        is_zero(N { 0 } otherwise { wait(N - 1) })
    }
}

public run = fn () {
    spawn(concurrent say, [self() "Enjoy"])
    spawn(concurrent say, [self() "Roseta"])
    spawn(concurrent say, [self() "Code"])
    wait(2)
    ok
}
