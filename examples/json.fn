
thing = object(foo, bar, baz)

@public
run = fn () {
    # helper function
    Print = fn (X) { io.format("~p~n", [X]) }
    Prints = fn (X) { io.format("~s~n", [X]) }
    # create an "object"
    P = thing("something", atom, true)

    Print(obj.to_dict(P))
    Prints(obj.to_json(P))

    P1 = thing(1, true,  1.3)

    Print(obj.to_dict(P1))
    Prints(obj.to_json(P1))

    P2 = thing(atom, ((tuple, atom, 1), [1,2,3]), [1.3, "hi"])

    Print(obj.to_dict(P2))
    Prints(obj.to_json(P2))
}
