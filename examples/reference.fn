
fn return_one
    case: 1
end

fn bool_to_text
    case true: 'true'
    case false: 'false'
end

fn add_two
    case A, B: A + B
end

fn divide_two_unsafe
    case A, B: A / B
end

fn divide_two
    case _A, 0: (error, division_by_zero)
    case A, B: (ok, A / B)
end

