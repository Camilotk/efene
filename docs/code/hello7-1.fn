
hellower = fn () {
    receive Name {
        print(hello(Name))
    }

    hellower()
}

@public
hello = fn (Name) when Name == "Winston Churchill" {
    "Well hello sir"
}

fn (Name) {
    io_lib.format("Hello ~s!", [Name])
}

@public
hello = fn () {
    hello("World")
}

print = fn (Msg) {
    io.format("~s~n", [Msg])
}

@public
run = fn () {
    Pid = spawn(fn hellower:0)
    Pid ! "World"
    Pid ! "Winston Churchill"
}
